&CONTROL
   calculation     = 'md'
   restart_mode    = 'from_scratch'
   disk_io         = 'low'   ! minimize disk IO, 'none' breaks restart
   wf_collect      = .false. ! minimize disk IO
   outdir          = 'pwscf_output'
   prefix          = 'pwscf'
   pseudo_dir      = '.'
   tprnfor         = .true.
   !tstress         = .true. ! faster w/o stress estimator
   dt              = 15 ! Ry
   nstep           = 2000
/

&SYSTEM
   ibrav           = 0        ! cell specified in CELL_PARAMETERS
   ecutwfc         = 30       ! energy converged to 1 mha/p
   input_dft       = 'pbe'    ! check that pseudopotential is consistent
   ntyp            = 1        ! just hydrogen
   nat             = 64       ! 64 atoms
   nosym           = .true.   ! no symmetry for disordered configurations
   degauss         = 0.006336 ! electronic temperature 1000K
   occupations     = 'smearing'
   smearing        = 'fermi-dirac'
/

&ELECTRONS
   diagonalization = 'david'  ! default, fast
   mixing_beta     = 0.7      ! default
   mixing_mode     = 'plain'  ! default
/

&IONS
   ion_dynamics    = 'verlet'        ! default
   ion_temperature = 'andersen'      ! OK for generating configurations
   tempw           = 7000            ! 1000 K
   nraise          = 1               ! default, scrambles velocity correlation
   wfc_extrapolation = 'first_order' ! restart wf guess from last MD step, fast
/

